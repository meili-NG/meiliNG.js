{
  "name": "meiling",
  "version": "0.9.0-snapshot",
  "description": "An Opensource Next Generation \"Gatekeeper\" with oAuth2 Authentication Provider and OpenID Connect Server",
  "main": "dist/",
  "repository": "https://github.com/meili-NG/meiliNG",
  "author": "Alex4386 <psh010209@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "4",
    "@simplewebauthn/server": "^5.4.0",
    "@xmldom/xmldom": "^0.8.0",
    "ansi-regex": "^6.0.1",
    "axios": "^0.21.2",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "fastify": "^3.27.1",
    "fastify-cors": "^5.1.0",
    "fastify-formbody": "^5.0.0",
    "fastify-secure-session": "^2.3.0",
    "fastify-swagger": "^4.15.0",
    "figlet": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "libphonenumber-js": "^1.9.49",
    "mysql2": "^2.2.5",
    "node-ssh": "^12.0.3",
    "nodemon": "^2.0.14",
    "openpgp": "^4.10.9",
    "pem2jwk": "^1.0.2",
    "pino-pretty": "^4.3.0",
    "prompts": "^2.4.1",
    "speakeasy": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@simplewebauthn/typescript-types": "^5.4.0",
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.138",
    "@types/bcryptjs": "^2.4.2",
    "@types/figlet": "^1.2.1",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.7",
    "@types/openpgp": "^4.4.14",
    "@types/speakeasy": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@typescript-eslint/typescript-estree": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "prisma": "4",
    "ts-node": "^9.0.0"
  },
  "scripts": {
    "debug": "ts-node ./src/",
    "build": "swc src --out-dir dist/ --sync",
    "build:types": "tsc",
    "build:docker": "docker build .",
    "dev": "nodemon",
    "start:dev": "swc src --out-dir dist/ --sync && node ./dist/",
    "start:prod": "swc src --out-dir dist/ --sync && NODE_ENV=production node ./dist/",
    "start": "NODE_ENV=production node ./dist/",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "studio": "NODE_ENV=production prisma studio",
    "migrate:deploy": "prisma migrate deploy --preview-feature",
    "migrate:dev": "prisma migrate dev --preview-feature",
    "migrate:reset": "prisma migrate reset --preview-feature",
    "migrate:redeploy": "prisma migrate reset --preview-feature; rm -rf ./prisma/migrations/; prisma migrate dev --preview-feature",
    "generate": "prisma generate",
    "keygen": "node ./keygen.js",
    "cleanup": "node ./dist/cleanup.js",
    "env:setup": "NODE_OPTIONS=\"--es-module-specifier-resolution=node\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
